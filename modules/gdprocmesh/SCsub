
Import("env")
Import("env_modules")

env_gdprocmesh = env_modules.Clone()
print("goprocmesh!!!!!!!!!!!!!!")


env_gdprocmesh.Prepend(CPPPATH=["#modules/gdprocmesh/src"])

# Godot's own source files
env_gdprocmesh.add_source_files(env.modules_sources, "*.cpp")
env_gdprocmesh.add_source_files(env.modules_sources, "./src/*.cpp")
env_gdprocmesh.add_source_files(env.modules_sources, "./src/input/*.cpp")
env_gdprocmesh.add_source_files(env.modules_sources, "./src/output/*.cpp")
env_gdprocmesh.add_source_files(env.modules_sources, "./src/primitives/*.cpp")
env_gdprocmesh.add_source_files(env.modules_sources, "./src/shapes/*.cpp")
env_gdprocmesh.add_source_files(env.modules_sources, "./src/surfaces/*.cpp")
env_gdprocmesh.add_source_files(env.modules_sources, "./src/transforms/*.cpp")
env_gdprocmesh.add_source_files(env.modules_sources, "./src/modifiers/*.cpp")


